/* pages/video/video.wxss */
.header{
  padding: 10rpx;
  display: flex;
}

.header image{
  width: 60rpx;
  height: 60rpx
}

.header input{
  border: 1rpx solid #eee;
  margin: 0 10rpx;
  border-radius: 10rpx;
  padding: 10rpx 0;
  flex-grow: 1
}

.header .placeholder{
  color: red;
  font-size: 28rpx;
  text-align: center
}

.navScroll{
  display: flex;
  height: 106rpx;
}

.navScroll .navItem{
  margin: 0 20rpx;
  flex-shrink: 0;
  height: 100rpx;
  line-height: 100rpx
}

.navScroll .navItem.active{
  border-bottom:4rpx solid red;
}


.navScroll .navItem text{
  display: inline-block;
  width: 100%;
  height: 100%
}